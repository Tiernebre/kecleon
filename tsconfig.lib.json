{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "./src/stories/**/*",
    "./src/setupTests.ts"
  ],
  "files": ["./src/index.ts"]
}
