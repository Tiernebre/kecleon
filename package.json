{
  "name": "@tiernebre/kecleon",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "directories": {
    "lib": "lib"
  },
  "version": "0.0.2",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "bulma": "^0.9.3",
    "react-transition-group": "^4.4.2",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17",
    "react-hook-form": ">=7",
    "react-router-dom": ">=5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiernebre/kecleon.git"
  },
  "scripts": {
    "bundle:scss": "copyfiles -u 1 src/styles/**/* lib && copyfiles -u 1 src/components/**/*.scss lib",
    "clean": "rimraf ./lib",
    "prebuild": "yarn clean",
    "build": "tsc --p tsconfig.lib.json",
    "postbuild": "yarn bundle:scss",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . --max-warnings=0",
    "test": "react-scripts test",
    "start": "start-storybook -p 6006 -s public",
    "build:storybook": "build-storybook -s public",
    "prepare": "husky install",
    "pre-commit": "yarn lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "react-app",
      "react-app/jest",
      "plugin:testing-library/react",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "plugins": [
      "testing-library",
      "jest-dom"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.eslint.json"
      ]
    },
    "rules": {
      "testing-library/no-node-access": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/node-logger": "^6.3.6",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.6",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.4",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-transition-group": "^4.4.2",
    "@types/uuid": "^8.3.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.2.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-testing-library": "^4.10.1",
    "husky": "^7.0.0",
    "lint-staged": ">=11.1.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.12.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "sass": "^1.36.0",
    "sass-loader": "10",
    "style-loader": "^2.0.0",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "babel-loader": "8.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,md,yml}": "prettier --write"
  }
}
